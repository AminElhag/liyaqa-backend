# ============================================
# Liyaqa Backend Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# ============================================

# Database Configuration
# PostgreSQL connection settings (must match docker-compose.yml for local development)
DB_USERNAME=liyaqa
DB_PASSWORD=change_this_in_production
DB_HOST=localhost
DB_PORT=5434
DB_NAME=liyaqa

# Redis Configuration
# Redis is used for distributed session storage and token blacklist
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_this_in_production

# JWT Configuration
# CRITICAL: Generate a strong random secret for production (min 64 characters)
# Example: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET_IN_PRODUCTION

# Email Configuration
# SMTP settings for transactional emails (password resets, notifications, etc.)
# For Gmail: Use App Password, not your regular password
# For production: Use SendGrid, AWS SES, or corporate SMTP
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
EMAIL_ENABLED=false
EMAIL_FROM=noreply@liyaqa.com
EMAIL_SECURITY_TEAM=security@liyaqa.com

# Application Configuration
# Set to 'prod' for production environment
SPRING_PROFILES_ACTIVE=dev
# Public URL of your application (used in emails and links)
APP_BASE_URL=http://localhost:8080

# Session Configuration
# Session timeout in hours (default: 8 hours = work day)
SESSION_TIMEOUT_HOURS=8

# Async Audit Configuration
# Thread pool settings for audit log processing
# Tune these based on your load and DB capacity
AUDIT_CORE_POOL_SIZE=5
AUDIT_MAX_POOL_SIZE=10
AUDIT_QUEUE_CAPACITY=1000
AUDIT_BATCH_SIZE=50
AUDIT_BATCH_TIMEOUT_MS=1000

# ============================================
# Production Deployment Notes
# ============================================
# 1. NEVER commit .env file to version control
# 2. Use strong random secrets for JWT_SECRET
# 3. Set EMAIL_ENABLED=true and configure valid SMTP credentials
# 4. Change all passwords from defaults
# 5. Set APP_BASE_URL to your production domain
# 6. Use SPRING_PROFILES_ACTIVE=prod
# 7. Consider using secrets management (AWS Secrets Manager, HashiCorp Vault, etc.)
# ============================================
