<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="001-create-tenant-table" author="liyaqa">
        <createTable tableName="tenants">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_id" type="VARCHAR(100)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="version" type="BIGINT" defaultValue="0"/>
        </createTable>

        <createIndex tableName="tenants" indexName="idx_tenant_id">
            <column name="tenant_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="002-create-employee-groups-table" author="liyaqa">
        <createTable tableName="internal_employee_groups">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_system" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="version" type="BIGINT" defaultValue="0"/>
        </createTable>
    </changeSet>

    <changeSet id="003-create-group-permissions-table" author="liyaqa">
        <createTable tableName="group_permissions">
            <column name="group_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_group_permissions_group" references="internal_employee_groups(id)"/>
            </column>
            <column name="permission" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-create-internal-employees-table" author="liyaqa">
        <createTable tableName="internal_employees">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password_hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(20)"/>
            <column name="department" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="job_title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="max_concurrent_tickets" type="INT" defaultValueNumeric="10"/>
            <column name="current_active_tickets" type="INT" defaultValueNumeric="0"/>
            <column name="last_login_at" type="TIMESTAMP"/>
            <column name="failed_login_attempts" type="INT" defaultValueNumeric="0"/>
            <column name="locked_until" type="TIMESTAMP"/>
            <column name="must_change_password" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="version" type="BIGINT" defaultValue="0"/>
        </createTable>

        <createIndex tableName="internal_employees" indexName="idx_employee_email">
            <column name="email"/>
        </createIndex>

        <createIndex tableName="internal_employees" indexName="idx_employee_status">
            <column name="status"/>
        </createIndex>
    </changeSet>

    <changeSet id="005-create-employee-groups-join-table" author="liyaqa">
        <createTable tableName="employee_groups">
            <column name="employee_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_employee_groups_employee" references="internal_employees(id)"/>
            </column>
            <column name="group_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_employee_groups_group" references="internal_employee_groups(id)"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="employee_groups" columnNames="employee_id,group_id"/>
    </changeSet>

    <changeSet id="006-create-audit-logs-table" author="liyaqa">
        <createTable tableName="internal_audit_logs">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="employee_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="employee_email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="employee_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="action" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="entity_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="entity_id" type="VARCHAR(255)"/>
            <column name="description" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="old_value" type="TEXT"/>
            <column name="new_value" type="TEXT"/>
            <column name="ip_address" type="VARCHAR(45)"/>
            <column name="user_agent" type="VARCHAR(500)"/>
            <column name="session_id" type="VARCHAR(255)"/>
            <column name="affected_tenant_id" type="VARCHAR(100)"/>
            <column name="risk_level" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="result" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="TEXT"/>
            <column name="duration_ms" type="BIGINT"/>
            <column name="timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="internal_audit_logs" indexName="idx_audit_employee">
            <column name="employee_id"/>
        </createIndex>

        <createIndex tableName="internal_audit_logs" indexName="idx_audit_entity">
            <column name="entity_type"/>
            <column name="entity_id"/>
        </createIndex>

        <createIndex tableName="internal_audit_logs" indexName="idx_audit_action">
            <column name="action"/>
        </createIndex>

        <createIndex tableName="internal_audit_logs" indexName="idx_audit_timestamp">
            <column name="timestamp"/>
        </createIndex>

        <createIndex tableName="internal_audit_logs" indexName="idx_audit_tenant">
            <column name="affected_tenant_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="007-enhance-tenant-table" author="liyaqa">
        <comment>
            Add comprehensive fields for tenant management including contact info,
            billing, subscription plans, contracts, and terms acceptance.
            This supports the full lifecycle of sports facility organizations.
        </comment>

        <!-- Contact Information -->
        <addColumn tableName="tenants">
            <column name="contact_email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="contact_phone" type="VARCHAR(50)"/>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="contact_person" type="VARCHAR(255)"/>
        </addColumn>

        <!-- Billing Information -->
        <addColumn tableName="tenants">
            <column name="billing_email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="billing_address" type="TEXT"/>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="tax_id" type="VARCHAR(100)"/>
        </addColumn>

        <!-- Subscription & Plan -->
        <addColumn tableName="tenants">
            <column name="plan_tier" type="VARCHAR(50)" defaultValue="FREE">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="subscription_status" type="VARCHAR(50)" defaultValue="TRIAL">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Multi-tenancy Support -->
        <addColumn tableName="tenants">
            <column name="subdomain" type="VARCHAR(100)">
                <constraints unique="true"/>
            </column>
        </addColumn>

        <!-- Contract & Legal -->
        <addColumn tableName="tenants">
            <column name="contract_start_date" type="DATE"/>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="contract_end_date" type="DATE"/>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="terms_accepted_at" type="TIMESTAMP"/>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="terms_accepted_by" type="VARCHAR(255)"/>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="terms_version" type="VARCHAR(50)"/>
        </addColumn>

        <!-- Additional Metadata -->
        <addColumn tableName="tenants">
            <column name="description" type="TEXT"/>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="facility_type" type="VARCHAR(100)"/>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="timezone" type="VARCHAR(50)" defaultValue="UTC"/>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="locale" type="VARCHAR(10)" defaultValue="en_US"/>
        </addColumn>

        <!-- Tracking -->
        <addColumn tableName="tenants">
            <column name="suspended_at" type="TIMESTAMP"/>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="suspended_by_id" type="UUID"/>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="suspension_reason" type="TEXT"/>
        </addColumn>

        <addColumn tableName="tenants">
            <column name="created_by_id" type="UUID">
                <constraints foreignKeyName="fk_tenant_created_by" references="internal_employees(id)"/>
            </column>
        </addColumn>

        <!-- Indexes for performance -->
        <createIndex tableName="tenants" indexName="idx_tenant_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="tenants" indexName="idx_tenant_subscription_status">
            <column name="subscription_status"/>
        </createIndex>

        <createIndex tableName="tenants" indexName="idx_tenant_plan_tier">
            <column name="plan_tier"/>
        </createIndex>

        <createIndex tableName="tenants" indexName="idx_tenant_contact_email">
            <column name="contact_email"/>
        </createIndex>

        <createIndex tableName="tenants" indexName="idx_tenant_subdomain">
            <column name="subdomain"/>
        </createIndex>
    </changeSet>

    <!-- Changeset 008: Create Sport Facilities Table -->
    <changeSet id="008-create-sport-facilities-table" author="liyaqa">
        <comment>
            Create sport_facilities table to represent sports clubs/facilities that belong to tenants.
            Each tenant can have multiple sport facilities (clubs), and each facility can have multiple branches.
        </comment>

        <createTable tableName="sport_facilities">
            <!-- Primary Key -->
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Multi-tenancy -->
            <column name="tenant_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <!-- Foreign Key to Tenant -->
            <column name="owner_tenant_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_facility_tenant"
                             references="tenants(id)"/>
            </column>

            <!-- Basic Information -->
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="TEXT"/>

            <column name="facility_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <!-- Contact Information -->
            <column name="contact_email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="contact_phone" type="VARCHAR(50)"/>

            <column name="website" type="VARCHAR(255)"/>

            <!-- Social Media -->
            <column name="social_facebook" type="VARCHAR(255)"/>
            <column name="social_instagram" type="VARCHAR(255)"/>
            <column name="social_twitter" type="VARCHAR(255)"/>

            <!-- Business Information -->
            <column name="established_date" type="DATE"/>
            <column name="registration_number" type="VARCHAR(100)"/>

            <!-- Amenities (JSON or comma-separated) -->
            <column name="amenities" type="TEXT"/>

            <!-- Operating Hours (JSON format) -->
            <column name="operating_hours" type="TEXT"/>

            <!-- Status -->
            <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>

            <!-- Settings -->
            <column name="timezone" type="VARCHAR(50)" defaultValue="UTC"/>
            <column name="locale" type="VARCHAR(10)" defaultValue="en_US"/>
            <column name="currency" type="VARCHAR(3)" defaultValue="USD"/>

            <!-- Audit Fields -->
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP"/>

            <column name="created_by_id" type="UUID">
                <constraints foreignKeyName="fk_facility_created_by"
                             references="internal_employees(id)"/>
            </column>

            <column name="version" type="BIGINT" defaultValue="0"/>
        </createTable>

        <!-- Indexes for performance -->
        <createIndex tableName="sport_facilities" indexName="idx_facility_tenant">
            <column name="owner_tenant_id"/>
        </createIndex>

        <createIndex tableName="sport_facilities" indexName="idx_facility_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="sport_facilities" indexName="idx_facility_type">
            <column name="facility_type"/>
        </createIndex>

        <createIndex tableName="sport_facilities" indexName="idx_facility_name">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <!-- Changeset 009: Create Facility Branches Table -->
    <changeSet id="009-create-facility-branches-table" author="liyaqa">
        <comment>
            Create facility_branches table to represent physical locations/branches of sport facilities.
            Each sport facility can have multiple branches (locations).
        </comment>

        <createTable tableName="facility_branches">
            <!-- Primary Key -->
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Multi-tenancy -->
            <column name="tenant_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <!-- Foreign Key to Sport Facility -->
            <column name="facility_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_branch_facility"
                             references="sport_facilities(id)
                             ON DELETE CASCADE"/>
            </column>

            <!-- Basic Information -->
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="TEXT"/>

            <column name="is_main_branch" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>

            <!-- Address -->
            <column name="address_line1" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="address_line2" type="VARCHAR(255)"/>

            <column name="city" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="state_province" type="VARCHAR(100)"/>

            <column name="postal_code" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="country" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <!-- Geographic Coordinates -->
            <column name="latitude" type="DECIMAL(10, 8)"/>
            <column name="longitude" type="DECIMAL(11, 8)"/>

            <!-- Contact Information -->
            <column name="contact_email" type="VARCHAR(255)"/>
            <column name="contact_phone" type="VARCHAR(50)"/>

            <!-- Capacity & Facilities -->
            <column name="total_courts" type="INTEGER" defaultValueNumeric="0"/>
            <column name="total_capacity" type="INTEGER" defaultValueNumeric="0"/>

            <!-- Amenities specific to this branch -->
            <column name="amenities" type="TEXT"/>

            <!-- Operating Hours (JSON format) -->
            <column name="operating_hours" type="TEXT"/>

            <!-- Status -->
            <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>

            <!-- Settings -->
            <column name="timezone" type="VARCHAR(50)" defaultValue="UTC"/>

            <!-- Audit Fields -->
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP"/>

            <column name="created_by_id" type="UUID">
                <constraints foreignKeyName="fk_branch_created_by"
                             references="internal_employees(id)"/>
            </column>

            <column name="version" type="BIGINT" defaultValue="0"/>
        </createTable>

        <!-- Indexes for performance -->
        <createIndex tableName="facility_branches" indexName="idx_branch_facility">
            <column name="facility_id"/>
        </createIndex>

        <createIndex tableName="facility_branches" indexName="idx_branch_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="facility_branches" indexName="idx_branch_main">
            <column name="is_main_branch"/>
        </createIndex>

        <createIndex tableName="facility_branches" indexName="idx_branch_city">
            <column name="city"/>
        </createIndex>

        <createIndex tableName="facility_branches" indexName="idx_branch_postal_code">
            <column name="postal_code"/>
        </createIndex>

        <!-- Composite index for geographic queries -->
        <createIndex tableName="facility_branches" indexName="idx_branch_coordinates">
            <column name="latitude"/>
            <column name="longitude"/>
        </createIndex>
    </changeSet>

    <!-- Employee enhancement for system initialization -->
    <changeSet id="014-add-employee-number-column" author="liyaqa">
        <addColumn tableName="internal_employees">
            <column name="employee_number" type="VARCHAR(50)">
                <constraints unique="true" nullable="true"/>
            </column>
        </addColumn>

        <createIndex tableName="internal_employees" indexName="idx_employee_number">
            <column name="employee_number"/>
        </createIndex>
    </changeSet>

    <changeSet id="015-add-is-system-account-column" author="liyaqa">
        <addColumn tableName="internal_employees">
            <column name="is_system_account" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <createIndex tableName="internal_employees" indexName="idx_employee_system_account">
            <column name="is_system_account"/>
        </createIndex>
    </changeSet>

    <!-- Changeset 016: Create Facility Employee Branch Assignments Junction Table -->
    <changeSet id="016-create-facility-employee-branches-table" author="liyaqa">
        <comment>
            Create facility_employee_branches junction table to support branch-level employee assignments.
            Employees can be assigned to specific branches within their facility.
            If no assignments exist, the employee has access to all branches.
        </comment>

        <createTable tableName="facility_employee_branches">
            <column name="employee_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_fac_emp_branch_employee"
                             references="facility_employees(id)"
                             deleteCascade="true"/>
            </column>

            <column name="branch_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_fac_emp_branch_branch"
                             references="facility_branches(id)"
                             deleteCascade="true"/>
            </column>
        </createTable>

        <!-- Composite primary key -->
        <addPrimaryKey tableName="facility_employee_branches"
                       columnNames="employee_id,branch_id"
                       constraintName="pk_facility_employee_branches"/>

        <!-- Indexes for performance -->
        <createIndex tableName="facility_employee_branches" indexName="idx_fac_emp_branch_employee">
            <column name="employee_id"/>
        </createIndex>

        <createIndex tableName="facility_employee_branches" indexName="idx_fac_emp_branch_branch">
            <column name="branch_id"/>
        </createIndex>
    </changeSet>

    <!-- Changeset 017: Create Members Table -->
    <changeSet id="017-create-members-table" author="liyaqa">
        <comment>
            Create members table for facility customers who can book and purchase memberships.
        </comment>

        <createTable tableName="members">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Tenant and Facility -->
            <column name="tenant_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="facility_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_member_facility"
                             references="sport_facilities(id)"/>
            </column>

            <!-- Basic Information -->
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="phone_number" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <!-- Identification -->
            <column name="member_number" type="VARCHAR(50)"/>
            <column name="date_of_birth" type="DATE"/>
            <column name="gender" type="VARCHAR(10)"/>
            <column name="national_id" type="VARCHAR(100)"/>

            <!-- Address -->
            <column name="address_line1" type="VARCHAR(255)"/>
            <column name="address_line2" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(100)"/>
            <column name="postal_code" type="VARCHAR(20)"/>
            <column name="country" type="VARCHAR(100)"/>

            <!-- Emergency Contact -->
            <column name="emergency_contact_name" type="VARCHAR(255)"/>
            <column name="emergency_contact_phone" type="VARCHAR(50)"/>
            <column name="emergency_contact_relationship" type="VARCHAR(50)"/>

            <!-- Medical Information -->
            <column name="blood_type" type="VARCHAR(10)"/>
            <column name="medical_conditions" type="TEXT"/>
            <column name="allergies" type="TEXT"/>
            <column name="medications" type="TEXT"/>

            <!-- Status -->
            <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>

            <column name="status_reason" type="TEXT"/>
            <column name="status_changed_at" type="TIMESTAMP"/>

            <!-- Preferences -->
            <column name="preferred_language" type="VARCHAR(10)" defaultValue="en"/>
            <column name="marketing_consent" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="sms_notifications" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="email_notifications" type="BOOLEAN" defaultValueBoolean="true"/>

            <!-- Notes and Profile -->
            <column name="notes" type="TEXT"/>
            <column name="profile_picture_url" type="VARCHAR(500)"/>

            <!-- Audit Fields -->
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP"/>

            <column name="version" type="BIGINT" defaultValue="0"/>
        </createTable>

        <!-- Indexes -->
        <createIndex tableName="members" indexName="idx_member_facility">
            <column name="facility_id"/>
        </createIndex>

        <createIndex tableName="members" indexName="idx_member_email">
            <column name="email"/>
        </createIndex>

        <createIndex tableName="members" indexName="idx_member_phone">
            <column name="phone_number"/>
        </createIndex>

        <createIndex tableName="members" indexName="idx_member_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="members" indexName="idx_member_member_number">
            <column name="member_number"/>
        </createIndex>

        <!-- Unique Constraints -->
        <addUniqueConstraint tableName="members"
                             columnNames="facility_id,email"
                             constraintName="uk_facility_member_email"/>

        <addUniqueConstraint tableName="members"
                             columnNames="facility_id,member_number"
                             constraintName="uk_facility_member_number"/>
    </changeSet>

    <!-- Changeset 018: Create Membership Plans Table -->
    <changeSet id="018-create-membership-plans-table" author="liyaqa">
        <comment>
            Create membership_plans table for branch-level membership offerings.
        </comment>

        <createTable tableName="membership_plans">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Tenant, Branch, and Facility -->
            <column name="tenant_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="branch_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_plan_branch"
                             references="facility_branches(id)"/>
            </column>

            <column name="facility_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_plan_facility"
                             references="sport_facilities(id)"/>
            </column>

            <!-- Basic Information -->
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="TEXT"/>

            <column name="plan_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <!-- Pricing -->
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>

            <column name="currency" type="VARCHAR(3)" defaultValue="USD">
                <constraints nullable="false"/>
            </column>

            <column name="billing_cycle" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="duration_months" type="INTEGER">
                <constraints nullable="false"/>
            </column>

            <!-- Features & Benefits -->
            <column name="features" type="TEXT"/>
            <column name="max_bookings_per_month" type="INTEGER"/>
            <column name="max_concurrent_bookings" type="INTEGER"/>
            <column name="advance_booking_days" type="INTEGER"/>
            <column name="cancellation_hours" type="INTEGER"/>
            <column name="guest_passes" type="INTEGER"/>

            <!-- Access Control -->
            <column name="has_court_access" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="has_class_access" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="has_gym_access" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="has_locker_access" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="priority_level" type="INTEGER" defaultValueNumeric="0"/>

            <!-- Discounts -->
            <column name="setup_fee" type="DECIMAL(10,2)"/>
            <column name="discount_percentage" type="DECIMAL(5,2)"/>

            <!-- Status -->
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <column name="is_visible" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <column name="max_members" type="INTEGER"/>
            <column name="current_members" type="INTEGER" defaultValueNumeric="0"/>

            <!-- Terms -->
            <column name="terms_and_conditions" type="TEXT"/>
            <column name="auto_renew" type="BOOLEAN" defaultValueBoolean="true"/>

            <!-- Audit Fields -->
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP"/>

            <column name="version" type="BIGINT" defaultValue="0"/>
        </createTable>

        <!-- Indexes -->
        <createIndex tableName="membership_plans" indexName="idx_membership_plan_branch">
            <column name="branch_id"/>
        </createIndex>

        <createIndex tableName="membership_plans" indexName="idx_membership_plan_facility">
            <column name="facility_id"/>
        </createIndex>

        <createIndex tableName="membership_plans" indexName="idx_membership_plan_name">
            <column name="name"/>
        </createIndex>

        <createIndex tableName="membership_plans" indexName="idx_membership_plan_status">
            <column name="is_active"/>
        </createIndex>

        <!-- Unique Constraints -->
        <addUniqueConstraint tableName="membership_plans"
                             columnNames="branch_id,name"
                             constraintName="uk_branch_plan_name"/>
    </changeSet>

    <!-- Changeset 019: Create Memberships Table -->
    <changeSet id="019-create-memberships-table" author="liyaqa">
        <comment>
            Create memberships table linking members to membership plans with dates and payment info.
        </comment>

        <createTable tableName="memberships">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Tenant and Relationships -->
            <column name="tenant_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="member_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_membership_member"
                             references="members(id)"/>
            </column>

            <column name="plan_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_membership_plan"
                             references="membership_plans(id)"/>
            </column>

            <column name="branch_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_membership_branch"
                             references="facility_branches(id)"/>
            </column>

            <column name="facility_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_membership_facility"
                             references="sport_facilities(id)"/>
            </column>

            <!-- Membership Details -->
            <column name="membership_number" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="start_date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="end_date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <!-- Status -->
            <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>

            <column name="status_changed_at" type="TIMESTAMP"/>
            <column name="status_reason" type="TEXT"/>

            <!-- Pricing & Payment -->
            <column name="price_paid" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>

            <column name="setup_fee_paid" type="DECIMAL(10,2)"/>

            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>

            <column name="payment_method" type="VARCHAR(50)"/>
            <column name="payment_reference" type="VARCHAR(255)"/>
            <column name="paid_at" type="TIMESTAMP"/>

            <!-- Auto-Renewal -->
            <column name="auto_renew" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="next_billing_date" type="DATE"/>
            <column name="renewal_reminder_sent" type="BOOLEAN" defaultValueBoolean="false"/>

            <!-- Usage Tracking -->
            <column name="bookings_used" type="INTEGER" defaultValueNumeric="0"/>
            <column name="guest_passes_used" type="INTEGER" defaultValueNumeric="0"/>
            <column name="last_used_at" type="TIMESTAMP"/>

            <!-- Cancellation -->
            <column name="cancelled_at" type="TIMESTAMP"/>
            <column name="cancelled_by" type="VARCHAR(255)"/>
            <column name="cancellation_reason" type="TEXT"/>

            <!-- Notes -->
            <column name="notes" type="TEXT"/>

            <!-- Audit Fields -->
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP"/>

            <column name="version" type="BIGINT" defaultValue="0"/>
        </createTable>

        <!-- Indexes -->
        <createIndex tableName="memberships" indexName="idx_membership_member">
            <column name="member_id"/>
        </createIndex>

        <createIndex tableName="memberships" indexName="idx_membership_plan">
            <column name="plan_id"/>
        </createIndex>

        <createIndex tableName="memberships" indexName="idx_membership_branch">
            <column name="branch_id"/>
        </createIndex>

        <createIndex tableName="memberships" indexName="idx_membership_facility">
            <column name="facility_id"/>
        </createIndex>

        <createIndex tableName="memberships" indexName="idx_membership_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="memberships" indexName="idx_membership_start_date">
            <column name="start_date"/>
        </createIndex>

        <createIndex tableName="memberships" indexName="idx_membership_end_date">
            <column name="end_date"/>
        </createIndex>

        <createIndex tableName="memberships" indexName="idx_membership_number">
            <column name="membership_number"/>
        </createIndex>
    </changeSet>
